extends layout
block local_link
	link(rel='stylesheet', href='/css/signin.css')

block content
	.container.login
		form.form-signin(method='POST', action='/login' role='form' )
			h2.form-signin-heading Login Form
				img(src='/img/bear_m.png' style='padding-left:10px')
			input.form-control(type='text', name='name', placeholder='UserName', required, autofocus)
			input.form-control(type='password', name='password', placeholder='Password', required)
			button.btn.btn-lg.btn-primary.btn-block(type='submit', name='login') Login
		if loginFailed
			container.login-failed
				.alert.alert-info
					span.glyphicon.glyphicon-remove
					| Login Failed.
